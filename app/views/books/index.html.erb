<div class="container">
    <h1>Books</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titulo</th>
      <th scope="col">Autor</th>
      <th scope="col">Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <th><%= book.id %></th>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td class="text-center">
          <%=link_to 'Detalle', book_path(book.id)%>
        </td>
      <td class="text-center">
          <%= link_to 'Editar', books_edit_path(book.id) %>
      </td>
      <td class="text-center">
           <%= link_to 'Destroy', '#', class: 'text-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>      
</div>